{
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/process-queue",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/scrape-tweets",
      "schedule": "*/30 * * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}